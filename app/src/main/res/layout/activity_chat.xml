<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_bg"
    tools:context="com.threeman.fuckchat.activity.ChatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3A393E"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/chat_iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/chat_back"
            />
        <TextView
            android:id="@+id/chat_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比卡丘"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/chat_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:00"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/chat_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/chat_tv_contentFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在吗？小兄弟、开撸"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/chat_my_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/chat_tv_contentTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9EE559"
            android:text="撸个毛啊"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/chat_my_img"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F3F3F3"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#666666"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
        <EditText
            android:id="@+id/chat_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:background="@drawable/et_line_bg"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:maxLines="3"
            />
        <Button
            android:id="@+id/chat_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#19AB18"
            android:text="发送"
            android:textColor="#fff"
            android:layout_marginRight="5dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
